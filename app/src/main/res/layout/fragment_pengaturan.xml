<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_app"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengaturan Situs"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelola nama perusahaan, logo, dan judul bagian"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <TextView
                    android:text="Company Information"
                    style="@style/SectionHeaderStyle"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Company Name"
                    app:boxStrokeColor="@color/brown_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Logo"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:id="@+id/btnUploadLogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="160dp"
                    android:background="@drawable/bg_dashed_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="24dp"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgLogoPreview"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:visibility="gone"
                        android:layout_marginBottom="8dp"/>

                    <ImageView
                        android:id="@+id/imgUploadIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/upload_24dp_ffffff_fill0_wght400_grad0_opsz24"
                        app:tint="@color/brown_primary"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tvUploadInfo"
                        android:text="Tekan untuk Mengupload Logo"
                        android:textColor="@color/brown_primary"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvUploadInfo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max size: 100MB"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:text="Hero Section"
                    style="@style/SectionHeaderStyle"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Hero Title"
                    app:boxStrokeColor="@color/brown_primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHeroTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Hero Subtitle"
                    app:boxStrokeColor="@color/brown_primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHeroSubtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:text="Vision &amp; Mission Section"
                    style="@style/SectionHeaderStyle"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Label"
                    app:boxStrokeColor="@color/brown_primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etVisionLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Title"
                    app:boxStrokeColor="@color/brown_primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etVisionTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:text="Products Section"
                    style="@style/SectionHeaderStyle"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Label"
                    app:boxStrokeColor="@color/brown_primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etProductLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Title"
                    app:boxStrokeColor="@color/brown_primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etProductTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:text="Clients Section"
                    style="@style/SectionHeaderStyle"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Label"
                    app:boxStrokeColor="@color/brown_primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etClientLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Title"
                    app:boxStrokeColor="@color/brown_primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etClientTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:text="Company History Section"
                    style="@style/SectionHeaderStyle"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Label"
                    app:boxStrokeColor="@color/brown_primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHistoryLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Title"
                    app:boxStrokeColor="@color/brown_primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHistoryTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:text="Testimonials Section"
                    style="@style/SectionHeaderStyle"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Label"
                    app:boxStrokeColor="@color/brown_primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTestiLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Title"
                    app:boxStrokeColor="@color/brown_primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTestiTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:text="Contact Section"
                    style="@style/SectionHeaderStyle"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Label"
                    app:boxStrokeColor="@color/brown_primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etContactLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Title"
                    app:boxStrokeColor="@color/brown_primary">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etContactTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveSettings"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:text="Simpan Pengaturan"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/brown_primary"
                    app:cornerRadius="8dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>