<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    android:fitsSystemWindows="true"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Back Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#000000"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:contentDescription="Back"/>

            <TextView
                android:id="@+id/tvPageTitle"
                android:text="Tambah Testimoni"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <!-- Input 1: Nama Klien -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Klien"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/brown_primary"
            app:hintTextColor="@color/brown_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etClientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Input 2: Instansi -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Instansi"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/brown_primary"
            app:hintTextColor="@color/brown_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etInstitution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Input 3: Umpan Balik (TextArea) -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Umpan Balik / Isi Testimoni"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/brown_primary"
            app:hintTextColor="@color/brown_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFeedback"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:scrollbars="vertical"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Input 4: Tanggal (Dengan Ikon Kalender) -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal"
            android:layout_marginBottom="32dp"
            app:boxStrokeColor="@color/brown_primary"
            app:hintTextColor="@color/brown_primary"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/calendar_month_24dp_ffffff_fill0_wght400_grad0_opsz24"
            app:endIconTint="@color/brown_primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:text="dd/mm/yyyy"/>
            <!-- focusable=false agar keyboard tidak muncul saat diklik -->
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Container Tombol (Batal & Simpan) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Batal"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                app:strokeColor="#BDBDBD"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Simpan"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:backgroundTint="@color/brown_primary"
                app:cornerRadius="12dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>