<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manajemen Visi &amp; Misi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perbarui pernyataan visi dan misi perusahaan Anda"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:text="Visi"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/brown_primary"
                app:boxStrokeWidth="1dp"
                app:boxBackgroundColor="@color/white"
                app:hintEnabled="false"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etVisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="6"
                    android:gravity="top|start"
                    android:padding="16dp"
                    android:inputType="textMultiLine"
                    android:text="Menjadi perusahaan rekayasa..." />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:text="Misi"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_misi"
                tools:itemCount="3"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddMisiPoint"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="+ Tambah Poin Misi"
                android:textColor="@color/brown_primary"
                app:strokeColor="@color/brown_primary"
                app:strokeWidth="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveVisiMisi"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Simpan Perubahan"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:backgroundTint="@color/brown_primary"
                app:cornerRadius="8dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>